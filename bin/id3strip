#!/usr/bin/env python
import sys
import os
import argparse

from mp3stuff.mp3 import Mp3Collection

parser = argparse.ArgumentParser(description='Removes extra tags/fields from mp3s in the specified folder.')
parser.add_argument('file', nargs='?', metavar="file", type=str, help='where the music is', default=os.getcwd())
args = parser.parse_args()

def strip(path):
    from subprocess import call
    call(["python","-m","eyed3.main","--remove-all-images","--remove-v1","--remove-all-comments","--remove-all-lyrics","-G","",path])

collection = Mp3Collection(args.file)
for mp3 in collection.folder_mp3s():
    strip(mp3)
